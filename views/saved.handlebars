<div class="row">
  <ul>
    {{#each dbArticle}}
    <figure class="storyPanel clearfix bg-light">
      <h5 class="storyHeadline">{{headline}}</h5>
      <a>
        <div class="imgBox">
          <img src="{{imageURL}}" class="storyImg" height="150">
        </div>
      </a>
      <button class="storyButton" id="saveArticle" data-id="{{_id}}">Save Article</button>
      <button class="storyButton" id="saveNote" data-id="{{_id}}" data-toggle="modal" data-target="#exampleModal">Add
        Note</button>
        <br>
      <div class="float">
        <a href="{{link}}" class="storyLink" target="_blank">
          <h3 class="storyByline">{{title}}</h3>
        </a>
        <br>
        <h5 class="storySummary">{{summary}}</h5>
      </div>
    </figure>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="notes"></div>
        </div>
      </div>
    </div>
    {{/each}}
  </ul>
</div>